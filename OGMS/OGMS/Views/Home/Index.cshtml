@{
    ViewBag.Title = "Home Page";
}

<div class="row">
    <div class="col-lg-12">
        <div class="well">
            <div class="row">
                <div class="col-md-12" style="text-align: center">
                    <img src="~/Content/Images/tcot_logo.png" />
                </div>
            </div>
            <div class="container-fluid">
                <div id="tcotCarousel" class="carousel slide" data-ride="carousel">
                    <ol class="carousel-indicators">
                        <li data-target="#tcotCarousel" data-slide-to="0" class="active"></li>
                        <li data-target="#tcotCarousel" data-slide-to="1"></li>
                        <li data-target="#tcotCarousel" data-slide-to="2"></li>
                        <li data-target="#tcotCarousel" data-slide-to="3"></li>
                    </ol>

                    <div class="carousel-inner" role="listbox">
                        <div class="item active">
                            <img src="~/Content/Images/Oil_Sunset.jpg" alt="Gas Management"
                                 style="height: 360px; width: 100%"/>
                            <div class="carousel-caption">
                                <h3 style="color: white">Gas Management</h3>
                                <p>Data related to Gas Production</p>
                            </div>
                        </div>

                        <div class="item">
                            <img src="~/Content/Images/Oil_Wells.jpg" alt="Oil Management" 
                                 style="height: 360px; width: 100%"/>
                            <div class="carousel-caption">
                                <h3 style="color: white">Oil Management</h3>
                                <p>Data related to Oil Production</p>
                            </div>
                        </div>

                        <div class="item">
                            <img src="~/Content/Images/Refinery.jpg" alt="W-1 Management" 
                                 style="height: 360px; width: 100%"/>
                            <div class="carousel-caption">
                                <h3 style="color: white">W-1 Management</h3>
                                <p>Data related to Reported W-1s</p>
                            </div>
                        </div>

                        <div class="item">
                            <img src="~/Content/Images/Sea_Refinery.jpg" alt="Severance Tax Management"
                                 style="height: 360px; width: 100%" />
                            <div class="carousel-caption">
                                <h3 style="color: white">Severance Tax Management</h3>
                                <p>Data related to Severance Taxes</p>
                            </div>
                        </div>
                    </div>

                    <a class="left carousel-control" href="#tcotCarousel" role="button" data-slide="prev">
                        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="right carousel-control" href="#tcotCarousel" role="button" data-slide="next">
                        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>

                <div class="row" style="padding-top:15px;">
                    <div class="col-md-6">
                        <div class="panel panel-primary">
                            <div class="panel-heading">
                                <div class="row">
                                    <div class="col-sm-1">
                                        <span class="glyphicon glyphicon-cog"></span>
                                    </div>
                                    <div class="col-sm-10">
                                        <h4 class="panel-title">Gas Management</h4>
                                    </div>
                                </div>
                            </div>
                            <div class="panel-body">
                                <p>Features contained within this website which will enable a User to manipulate
                                and view data pertaining to Gas Production.</p>
                                <h5>Reports:</h5>
                                <ul>
                                    <li>Gas Production Per Year / Month</li>
                                    <li>Averages Per Year</li>
                                    <li>Individual Well Averages & Totals</li>
                                </ul>
                                <input type="button" value="Gas Management" onclick="GasRedirect()" class="btn btn-primary"/>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="panel panel-primary">
                            <div class="panel-heading">
                                <div class="row">
                                    <div class="col-sm-1">
                                        <span class="glyphicon glyphicon-flash"></span>
                                    </div>
                                    <div class="col-sm-10">
                                        <h4 class="panel-title">Oil Management</h4>
                                    </div>
                                </div>
                            </div>
                            <div class="panel-body">
                                <p>
                                    Features contained within this website which will enable a User to manipulate
                                    and view data pertaining to Oil Production.
                                </p>
                                <h5>Reports:</h5>
                                <ul>
                                    <li>Oil Production Per Year / Month</li>
                                    <li>Averages Per Year</li>
                                    <li>Individual Well Averages & Totals</li>
                                </ul>
                                <input type="button" value="Oil Management" onclick="OilRedirect()" class="btn btn-primary" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row" style="padding-top:15px;">
                <div class="col-md-6">
                    <div class="panel panel-primary">
                        <div class="panel-heading">
                            <div class="row">
                                <div class="col-sm-1">
                                    <span class="glyphicon glyphicon-cog"></span>
                                </div>
                                <div class="col-sm-10">
                                    <h4 class="panel-title">W-1 Management</h4>
                                </div>
                            </div>
                        </div>
                        <div class="panel-body">
                            <p>
                                Features contained within this website which will enable a User to manipulate
                                and view data pertaining to reported W-1s.
                            </p>
                            <h5>Reports:</h5>
                            <ul>
                                <li>Reported W-1s Per Year / Month</li>
                                <li>Reported Averages Per Year</li>
                                <li>Individual Operator W-1 Reported Averages</li>
                            </ul>
                            <input type="button" value="W-1 Management" onclick="W1Redirect()" class="btn btn-primary" />
                        </div>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="panel panel-primary">
                        <div class="panel-heading">
                            <div class="row">
                                <div class="col-sm-1">
                                    <span class="glyphicon glyphicon-flash"></span>
                                </div>
                                <div class="col-sm-10">
                                    <h4 class="panel-title">Severance Tax Management</h4>
                                </div>
                            </div>
                        </div>
                        <div class="panel-body">
                            <p>
                                Features contained within this website which will enable a User to manipulate
                                and view data pertaining to different Severance Taxes collected from different
                                Tax Exemptions provided at the time by the State of Texas.
                            </p>
                            <h5>Reports:</h5>
                            <ul>
                                <li>Low Producing Well Taxes</li>
                                <li>High Cost Gas Taxes</li>
                                <li>2 Year Exempt Taxes</li>
                            </ul>
                            <input type="button" value="Tax Management" onclick="TaxRedirect()" class="btn btn-primary" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    function GasRedirect() {
        var URl = '@Url.Action("GasInfo", "Gas")';
        window.location.assign(URl);
    }

    function OilRedirect() {
        var URL = '@Url.Action("OilReportInfo", "Oil")';
        window.location.assign(URL);
    }

    function W1Redirect() {
        var Url = '@Url.Action("W1ReportInfo", "W1")';
        window.location.assign(Url);
    }

    function TaxRedirect() {
        var Url = '@Url.Action("TaxInfo", "SeveranceTax")';
        window.location.assign(Url);
    }
</script>